---
layout: base.njk
---
<article class="case-study">
  <!-- Hero Section with Image -->
  <section class="case-hero-section">
    {% if image %}
    <div class="case-hero-image">
      <img src="{{ image | url }}" alt="{{ title }}">
      <div class="case-hero-overlay"></div>
    </div>
    {% endif %}
    <div class="case-hero-content">
      <div class="container">
        <p class="case-client">{{ client }}</p>
        <h1>{{ title }}</h1>
        <p class="case-industry">{{ industry }}</p>
      </div>
    </div>
  </section>
<!-- Case Content -->
  <section class="case-content">
    <div class="container">
      <div class="case-body">
        {% if insight %}
        <div class="case-insight">
          <p>{{ insight }}</p>
        </div>
        {% endif %}

        {{ content | safe }}
      </div>
    </div>
  </section>
  <!-- Case Study CTA -->
  <section class="case-cta">
    <div class="container">
      <div class="case-cta-content">
        <h2>Interested in similar results?</h2>
        <p>Let's discuss how we can help you make confident decisions with fast, focused research.</p>
        <div class="case-cta-buttons">
          <a href="{{ '/case-studies' | url }}" class="btn-secondary">‚Üê Back to Case Studies</a>
          <a href="{{ '/challenge-us' | url }}" class="btn-primary">Challenge Us</a>
        </div>
      </div>
    </div>
  </section>
</article>